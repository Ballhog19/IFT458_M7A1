extends baseTemplate

block content
  // <section class="overview">
  main.main
    .card-container
      .card
        .card__header
          .card__details
            h4.card__sub-heading New User
            p.card__text
              | Please enter the following Details
            .card__data
              form(action='/api/v1/users/signUp' method='POST')
                label(for='fname') Full Name:
                input#fname(type='text', name='fname')
                br
                br
                label(for='email') Email:
                input#email(type='email', name='email')
                br
                br
                label(for='password') Password:
                input#password(type='password', name='password')
                br
                br
                label(for='cpassword') Confirm Password:
                input#cpassword(type='password', name='cpassword')
                br
                br
                input.card__sub-heading(type='submit', value='Submit')
